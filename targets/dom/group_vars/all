# The global variable file for container-based dynamic resource provisioning

# Sarus: OCI-compliant container runtime for HPC
sarus_module: sarus
sarus_base_cmd: "module load {{ sarus_module }}; sarus run --entrypoint --mount=type=bind,bind-propagation=recursive,source=/mnt,destination=/mnt"

# Absolute path of this current repo
root_dir: /users/ftessier/dynamic-resource-provisioning

# Tools
kill_cmd: "pkill -xf -9"
mount_cmd: "/usr/bin/mount"
umount_cmd: "/usr/bin/umount"
